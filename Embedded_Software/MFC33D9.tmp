static void cellVoltages(){
  uint8 response[7];
  
  readBMS(0x3F, response, 4);   //Cell 1
  waitUs(3500);
}

static void waitUs(uint16 a){
  uint16 i = 0;
  for(i = 0; i < a; i++){
    /* 32 NOPs == 1 usecs */
       asm("nop"); asm("nop"); asm("nop"); asm("nop"); asm("nop");
       asm("nop"); asm("nop"); asm("nop"); asm("nop"); asm("nop");
       asm("nop"); asm("nop"); asm("nop"); asm("nop"); asm("nop");
       asm("nop"); asm("nop"); asm("nop"); asm("nop"); asm("nop");
       asm("nop"); asm("nop"); asm("nop"); asm("nop"); asm("nop");
       asm("nop"); asm("nop"); asm("nop"); asm("nop"); asm("nop");
       asm("nop"); asm("nop");
  }
}



